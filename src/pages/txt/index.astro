---
import '../../styles/reset.css';
import '../../styles/style.css';

import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';
import NovelTitle from '../../components/NovelTitile.astro';

const pageTitle = "txt";

---
<html lang="ja">
<head>
  <!-- Global site tag (gtag.js) - Google Analytics -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{pageTitle} | スモツ</title>
  <!-- <meta name="description" content=""> -->
  <!-- <meta name="keywords" content=""> -->
  <meta http-equiv="Content-Script-Type" content="text/javascript">
  <meta http-equiv="Content-Style-Type" content="text/css">
  <meta name="robots" content="noindex, follow" />
  <link href="https://fonts.googleapis.com/css?family=Noto+Sans+JP:300,400|Noto+Serif+JP:300,400,500&subset=japanese" rel="stylesheet">
  <!-- <link rel="stylesheet" href="../css/reset.css"> -->
  <!-- <link rel="stylesheet" href="../css/style.css"> -->
</head>
<body>
  <div class="wrap">
    <header>
      <h1 class="logo">
        <a href="../top.html">
          <img src="../images/logo.png" width="81" height="100" alt="SUMOTSU" />
        </a>
      </h1>
      <Navigation />
    </header>
    <main id="txt">
      <h2 class="tit_normal">-txt-</h2>
      <p class="notice boder_dashed"> 名前変換は次のページです。 </p>

      <NovelTitle tit="長編タイトル" url="./novelName/" desc="長編の説明<br>改行タグが使えます"/>
      <NovelTitle tit="中編タイトル" url="./novelName/" desc="中編の説明"/>
      <NovelTitle tit="中編タイトル（裏）" url="./ura/" desc="中編の説明。小説目次の前にワンクッションページが入ります" uratarget="novelName"/>
      <NovelTitle tit="短編" url="./short/" desc="短編の説明"/>
      <NovelTitle tit="拍手ログ" url="./claplog/" desc="下げた拍手置き場"/>

    </main>
    <aside id="pankuzu">
      <ul class="">
        <li><a href="../top.html">top</a></li>
        <li><span>{pageTitle}</span></li>
      </ul>
    </aside>
    <Footer />
  </div>
  <!-- <script src="../js/common.js"></script> -->
</body>
</html>