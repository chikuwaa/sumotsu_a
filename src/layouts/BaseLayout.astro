---
import '../styles/reset.css';
import '../styles/style.css';

import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const { pageTitle , pankuzu} = Astro.props;

---
<html lang="ja">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{pageTitle} | スモツ</title>
  <meta http-equiv="Content-Script-Type" content="text/javascript">
  <meta http-equiv="Content-Style-Type" content="text/css">
  <meta name="robots" content="noindex, follow" />
  <link href="https://fonts.googleapis.com/css?family=Noto+Sans+JP:300,400|Noto+Serif+JP:300,400,500&subset=japanese" rel="stylesheet">
</head>
<body>
  <div class="wrap">
    <Header tit={pageTitle} />
    <slot />
    <Footer pankuzuLists={pankuzu}/>
  </div>
  <script>
    import "../scripts/common.js";
  </script>
</body>
</html>