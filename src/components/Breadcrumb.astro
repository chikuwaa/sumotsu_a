---
const { lists } = Astro.props;
interface ListItem {
  path: string;
  name: string;
}
const basePass = import.meta.env.BASE_URL;
const comparePass = Astro.url.origin + basePass;
---
{ Astro.url.href !== comparePass && // index以外
<aside id="pankuzu">
  <ul class="">
    <li><a href={basePass+"top/"}>top</a></li>
    {
      lists.map((list: ListItem, index: number) => (
       list.name  !== "top" && ( // top以外
        <li>
          {lists.length - 1 !== index ? (
            <a href={basePass + list.path}>{list.name}</a>
            ) : (
            <span>{list.name}</span>
            )}
        </li>
       )
      ))
    }
  </ul>
</aside>
}
